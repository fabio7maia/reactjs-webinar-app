{
  "name": "reactjs-webinar-app",
  "license": "MIT",
  "author": {
    "name": "FÃ¡bio Maia"
  },
  "version": "1.0.0",
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@reactjs-webinar/general": "0.6.0",
    "@reactjs-webinar/theme": "0.3.0",
    "rc-drawer": "^4.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-select": "^4.3.1",
    "redux": "^4.1.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:coverage": "craco test --coverage --watchAll=false --runInBand",
    "lint": "eslint . --ignore-path ./.gitignore",
    "lint:spell": "npx cspell -c cspellrc.json",
    "lint:styles": "stylelint src/**/*css",
    "lint:fix": "yarn run lint -- --fix",
    "lint:all": "yarn run lint && yarn run lint:spell && yarn run lint:styles",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "git:pre-commit": "lint-staged",
    "git:pre-push": "yarn run test:coverage",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "yarn run lint:all"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/reportWebVitals.ts",
      "!src/**/*.d.ts"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "craco-alias": "^3.0.1",
    "cspell": "^5.4.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "react-scripts": "4.0.3",
    "redux-devtools-extension": "^2.13.9",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  }
}
